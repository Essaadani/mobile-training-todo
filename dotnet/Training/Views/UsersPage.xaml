<?xml version="1.0" encoding="UTF-8"?>
<d:BaseContentPage 
    xmlns:d="clr-namespace:CouchbaseLabs.MVVM.Forms.Pages;assembly=CouchbaseLabs.MVVM.Forms"
    xmlns:vm="clr-namespace:Training.ViewModels;assembly=Training.Core"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:TypeArguments="vm:UsersViewModel"
    x:Class="Training.Views.UsersPage"
    Title="Users"
    Icon="Users.png">
    <ContentPage.Content>
		<ListView ItemsSource="{Binding ListData}" Header="{Binding .}">
            <ListView.HeaderTemplate>
				<DataTemplate>
                     <SearchBar Text="{Binding SearchTerm, Mode=TwoWay}" />
				</DataTemplate>
            </ListView.HeaderTemplate>
			<ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}">
                        <TextCell.ContextActions>
                            <MenuItem Clicked="OnDelete_Clicked" Text="Delete" IsDestructive="True" />
                        </TextCell.ContextActions>
					</TextCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
    </ContentPage.Content>
</d:BaseContentPage>
