<resources>

    <!-- Base application theme. -->
    <style name="TodoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TodoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TodoTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="TodoTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TodoTheme.Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TodoTheme.Text.Label">
        <item name="android:textSize">@dimen/text_label</item>
    </style>

    <style name="TodoTheme.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TodoTheme.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
</resources>
